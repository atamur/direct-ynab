# direnv-managed venv
layout python python3.12
export PYTHONPATH=$PWD/src

# One-time bootstrap of dependencies + dev extras
if [ ! -f .direnv/bootstrap_done ]; then
  echo "Bootstrapping project (pip install -e '.[dev]')..."
  pip install --upgrade pip
  pip install -e ".[dev]"
  touch .direnv/bootstrap_done
fi
